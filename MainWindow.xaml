<Window x:Class="TimeVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
         Title="Previsão do Tempo" Height="350" Width="328" 
        Background="White" ResizeMode="NoResize"
        AllowDrop="True" Icon="/faviconSol.png"   SnapsToDevicePixels="True" >
    <Grid Margin="0,0,0,0">

        <StackPanel 
                    VerticalAlignment="Top" Height="319"
                    Margin="37,5,37,0" RenderTransformOrigin="0.5,0.5" >

            <TextBlock HorizontalAlignment="Center" Text="Previsão do Tempo" FontSize="20" FontWeight="Bold" Margin="0,10,0,20" Height="32"/>

            <StackPanel Orientation="Horizontal" Margin="-5,0,0,10">
                <Label Content="Cidade:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCidade" AcceptsReturn="False" Width="150" VerticalContentAlignment="Center"/>
            </StackPanel>

            <Button BorderThickness="1"
                    Content="Buscar Clima"
                    Width="150" Height="40"
                    Click="BuscarPrevisaoClick"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    UseLayoutRounding="False"
                    FontWeight="Medium"
                    FontSize="14"
                    IsDefault="True" Cursor="Hand"
                    ToolTip="Buscar o clima da cidade digitada"
                    MouseLeave="Texto_SairComMouse">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.4" RenderingBias="Performance" ShadowDepth="5" BlurRadius="6" Direction="293" />
                </Button.Effect>

            </Button>
            <TextBlock Width="234" Height="36" x:Name="txtTituloResultado"
                       FontSize="25"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Foreground="SlateBlue"
                       Text="" />

            <TextBlock x:Name="txtResultado" 
                       Foreground="Black"
                       TextWrapping="Wrap"
                       Height="125"
                       FontWeight="DemiBold"
                       Margin="0,10,0,5"
                       Padding="5,0,5,0"
                       TextAlignment="Center" Width="236">

            </TextBlock>

        </StackPanel>
    </Grid>

</Window>
